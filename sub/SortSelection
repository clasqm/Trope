sub SortSelection(switch$)
######Trope subroutine#####
	local TextToSort$ , tempdir$, tempfile1$,tempfile2$, dothis$
	TextToSort$ = textedit get$ "EditBox","Selection"
	if TextToSort$ = "" then
		Alert "Please select the lines of text to sort.", "OK", "none"
		return
	elsif instr(TextToSort$, "\n") = 0
		Alert "Please select TWO or more lines of text to sort.", "OK", "none"
		return
	else
		tempdir$ = system$("finddir B_COMMON_TEMP_DIRECTORY")
		tempdir$ = left$(tempdir$, len(tempdir$) -1) //strip off trailing newline
		tempfile1$ = tempdir$ + "/tosort"
		open tempfile1$ for writing as #1
			print #1 TextToSort$
		close #1
		dothis$ = "grep '.' " + tempfile1$+ " | sort " +switch$
		tempfile2$ = system$(dothis$)
		tempfile2$ = left$(tempfile2$, len(tempfile2$) -1) //strip off trailing newline
		Textedit set "EditBox", "clear"
		textedit add "EditBox", tempfile2$
		system("rm -f " + tempfile1$)
	endif
end sub

