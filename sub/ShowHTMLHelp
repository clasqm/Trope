sub ShowHTMLHelp()
######Trope subroutine#####
local help$, helpfile$, dothis$, TempfilePath$, streamhandle
	TempfilePath$ = system$("finddir B_COMMON_TEMP_DIRECTORY") 
	TempfilePath$ = left$(TempfilePath$, len(TempfilePath$)-1) //strip off trailing newline
	helpfile$ = TempfilePath$ + "/Trope.html"
	streamhandle = open(helpfile$, "w")
	restore Helpdata
	do 
		read help$
		if (help$ = "end_of_help_data") break
		if left$(help$,2) = "<h" or left$(help$,3) = "</h" then
			print #streamhandle, help$ 
		elseif help$ = "<b>" or help$ = "</b>" then
			print #streamhandle, help$ 
		elseif help$ =" " then
			print #streamhandle, "<br>"
		else
			print #streamhandle, help$ + "<br>"
		end if
	loop
	close streamhandle
	launch helpfile$
end sub

