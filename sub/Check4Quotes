sub Check4Quotes(SearchText$, ReplaceText$)
	if instr(SearchText$, "\''") return 1
	if instr(SearchText$, "'") return 1
	if instr(SearchText$, "`") return 1
	if instr(SearchText$, ".") return 1
	if instr(SearchText$, "!") return 1
	if instr(SearchText$, "?") return 1
	if instr(SearchText$, "|") return 1
	if instr(SearchText$, ">") return 1
	if instr(SearchText$, "*") return 1
	if instr(ReplaceText$, "\''") return 1
	if instr(ReplaceText$, "'") return 1
	if instr(ReplaceText$, "`") return 1
	if instr(ReplaceText$, ".") return 1
	if instr(ReplaceText$, "!") return 1
	if instr(ReplaceText$, "?") return 1
	if instr(ReplaceText$, "|") return 1
	if instr(ReplaceText$, ">") return 1
	if instr(ReplaceText$, "*") return 1
	return 0
end sub

