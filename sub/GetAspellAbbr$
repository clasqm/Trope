sub GetAspellAbbr$()
######Trope subroutine#####
	local abbr$
	switch Language$
		case "English-GB"
			abbr$ ="en_GB"
			break
		case "English-US"
			abbr$ ="en_US"
			break
		case "Nederlands"
			abbr$ ="nl_NL"
			break
		case "Deutsch"
			abbr$ ="de_DE"
			break
		case "Français"
			abbr$ ="fr_FR"
			break
		case "Español"
			abbr$ ="es_SP"
			break
		case "Português-PT"
			abbr$ ="pt_PT"
			break
		case "Português-BR"
			abbr$ ="pt_BR"
			break
		case "Català"
			abbr$ ="ca_SP"
			break
		case "Italiano"
			abbr$ ="it_IT"
			break
		case "Română"
			abbr$ ="ro_RO"
			break
//		case "Afrikaans"
//			abbr$ ="af"
//			break
//		case "Čeština"
//			abbr$ ="cs"
//			break
