//			abbr$ ="fi"
//			break
//		case "Magyar"
//			abbr$ ="hu"
//			break
//		case "Islenska"
//			abbr$ ="is"
//			break
//		case "Nihongo"
//			abbr$ ="ja"
//			break
//		case "Nynorsk"
//			abbr$ ="nn"
//			break
//		case "Bokmål"
//			abbr$ ="nb"
//			break
//		case "Norsk"
//			abbr$ ="no"
//			break
//		case "Język polski"
//			abbr$ ="pl"
//			break
//		case "Ру́сский язы́к"
//			abbr$ ="ru"
//			break
