sub SaveOffsetSettings()
######Trope subroutine#####
	xorigin = (window get "MainWindow", "position-x") + 20
	yorigin = (window get "MainWindow", "position-y") + 45
	open SettingsFile$ for writing as #1
	print #1 str$(xorigin)
	print #1 str$(yorigin)
	print #1 window get "MainWindow", "width"
	print #1 window get "MainWindow", "height"
	print #1 str$(WordWrap)
	print #1 str$(Backup)
	print #1 str$(Toolbar)
	close #1
end sub

